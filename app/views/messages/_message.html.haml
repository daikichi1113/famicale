.messages__message{data: {message: {id: message.id}}}
  .messages__message__upper-box
    = image_tag "/@group_user.image"
    -# = %message.user.name
    .messages__message__upper-box__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .messages__message__text
    - if message.content.present?
      %p= message.content
-if user_signed_in? && current_user.id == message.user_id
  .messages__messageCurrentUser{data: {message: {id: message.id}}}
    .messages__messageCurrentUser__icon
      = image_tag message.user.image
    .messages__messageCurrentUser__chatting
      .messages__messageCurrentUser__chatting__date
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
      .messages__messageCurrentUser__chatting__text
        - if message.content.present?
          %p= message.content
-else
  .messages__message{data: {message: {id: message.id}}}
    .messages__message__icon
      = image_tag message.user.image
    .messages__message__chatting
      .messages__message__chatting__date
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
      .messages__message__chatting__text
        - if message.content.present?
          %p= message.content